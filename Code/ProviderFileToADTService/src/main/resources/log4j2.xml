<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] 
      %highlight{%level}{FATAL=bg_red, ERROR=red, WARN=yellow, INFO=green, DEBUG=blue} - %msg%n" />
		</Console>
		<RollingFile name="RollingFileAppender" fileName="logs/app.log"
			filePattern="logs/$${date:yyyy-MM}/app-%d{MM-dd-yyyy}-%i.log.gz">			
			<JSONLayout complete="true" compact="false" properties="true" /> <!-- properties = true, so that the appender includes the thread context map in the generated JSON. -->
			<Policies>
				<OnStartupTriggeringPolicy />
				<TimeBasedTriggeringPolicy />
				<SizeBasedTriggeringPolicy size="50 MB" />
			</Policies>
			<DefaultRolloverStrategy max="20" />
		</RollingFile>
	</Appenders>


	<Loggers>
		<Root level="INFO" >
			<AppenderRef ref="RollingFileAppender" />
			<AppenderRef ref="Console" />
		</Root>
		<logger name="gov.va.mass.adapter.transform.patientproviders" level="DEBUG" additivity="false" >
			<AppenderRef ref="Console" />
			<AppenderRef ref="RollingFileAppender" />
		</logger>
		
	</Loggers>
	
</Configuration>