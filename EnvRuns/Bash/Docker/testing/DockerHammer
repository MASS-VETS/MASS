#!/bin/bash
#descriptive names for incoming params
configFile=$1
nm=$2
rcvport=$3
msgCnt=$4
msgRate=$5
msgType=$6

#environment specific config
#sets all cfg* variables
source ../$configFile
source ../DockerOpts

#defaults
if [ -z $msgCnt ]; then
  msgCnt=100
fi
if [ -z $msgRate ]; then
  msgRate=10
fi
if [ -z $msgType ]; then
  msgType="ADT^A01"
fi


#--- DOCKER CONTAINER for a single interface running hammer
docker run -d\
  ${containOpts[*]}\
  --name hammer_${nm}_c hammer_i\
  --memory="600m" --restart unless-stopped\
  --destination.url=http://severusqa-submission1:${rcvport}/receive --message.type=${msgType} --message.count=${msgCnt} --message.rate=${msgRate}
